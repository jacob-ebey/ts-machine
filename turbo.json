{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "typecheck": {
      "inputs": ["**/*.ts", "**/*.ts", "tsconfig.json"],
      "outputs": []
    },
    "test": {
      "inputs": ["src/**/*", "tests/**/*"]
    }
  }
}
